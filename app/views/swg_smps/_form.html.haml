            .form-group.row
              = f.label Setting.swg_smps.amn_ipt, :class => "col-8 col-form-label text-right"
              .col-4
                = f.number_field :amn_ipt, :class => "form-control rounded-0" , :required => true, :step => "0.0001"
              
          .col-6
            .form-group.row
              = f.label Setting.swg_smps.amn_opt, :class => "col-8 col-form-label text-right"
              .col-4
                = f.number_field :amn_opt, :class => "form-control rounded-0" , :required => true, :step => "0.0001"
              
              
        .form-row
          .col-6
            .form-group.row
              = f.label Setting.swg_smps.tmn_ipt, :class => "col-8 col-form-label text-right"
              .col-4
                = f.number_field :tmn_ipt, :class => "form-control rounded-0" , :required => true, :step => "0.0001"
              
          .col-6
            .form-group.row
              = f.label Setting.swg_smps.tmn_opt, :class => "col-8 col-form-label text-right"
              .col-4
                = f.number_field :tmn_opt, :class => "form-control rounded-0" , :required => true, :step => "0.0001"
              
