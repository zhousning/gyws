- provide(:title, t('.title'))


.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-9.ml-sm-auto.col-lg-10.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "list", text: t(controller_name + "." + action_name + '.title')
          = link_to new_sewage_swg_smp_path(@sewage), :class => "button pull-right button-primary" do
            = fa_icon "plus", text: Setting.systems.btn_new, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-12
              %table.text-center.table-striped.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :'data-id-table'=>"advancedTable"}
                %thead
                  %tr
                    %th{:scope => "col"} #
                  
                    %th{:scope => "col"}
                      = Setting.swg_smps.smp_date
                    %th{:scope => "col"}
                      = Setting.swg_smps.act_ipt
                    %th{:scope => "col"}
                      = Setting.swg_smps.ipt_tmp
                    %th{:scope => "col"}
                      = Setting.swg_smps.ipt_ph
                    %th{:scope => "col"}
                      = Setting.swg_smps.cod_ipt
                    %th{:scope => "col"}
                      = Setting.swg_smps.cod_opt
                    %th{:scope => "col"}
                      = Setting.swg_smps.cod_rmr
                    %th{:scope => "col"}
                      = Setting.swg_smps.amn_ipt
                    %th{:scope => "col"}
                      = Setting.swg_smps.amn_opt
                    %th{:scope => "col"}
                      = Setting.swg_smps.amn_rmr
                    %th{:scope => "col"}
                      = Setting.swg_smps.tmn_ipt
                    %th{:scope => "col"}
                      = Setting.swg_smps.tmn_opt
                    %th{:scope => "col"}
                      = Setting.swg_smps.tmn_rmr
                    %th{:scope => "col"}
                      = Setting.swg_smps.rts
                    %th{:scope => "col"}
                      = Setting.swg_smps.level_ab
                    %th{:scope => "col"}
                      设置
                %tbody
                  - @swg_smps.each_with_index do |swg_smp, index|
                    %tr
                      %td{:scope => "row"}
                        = index+1
                    
                      %td
                        = swg_smp.smp_date
                      %td
                        = swg_smp.act_ipt
                      %td
                        = swg_smp.ipt_tmp
                      %td
                        = swg_smp.ipt_ph
                      %td
                        = swg_smp.cod_ipt
                      %td
                        = swg_smp.cod_opt
                      %td
                        = swg_smp.cod_rmr
                      %td
                        = swg_smp.amn_ipt
                      %td
                        = swg_smp.amn_opt
                      %td
                        = swg_smp.amn_rmr
                      %td
                        = swg_smp.tmn_ipt
                      %td
                        = swg_smp.tmn_opt
                      %td
                        = swg_smp.tmn_rmr
                      %td
                        = swg_smp.rts
                      %td
                        = swg_smp.level_ab
                      %td
                        .container-fluid
                          .row.justify-content-center
                            = link_to "编辑", edit_sewage_swg_smp_path(@sewage, swg_smp), :class => "button button-highlight button-small mr-1" 
                            = link_to "详细",  sewage_swg_smp_path(@sewage, swg_smp), :class => "button button-primary button-small mr-1" 
                            = link_to "删除",  sewage_swg_smp_path(@sewage, swg_smp), :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "button button-caution button-small" 
      = render "layouts/bootstrap/card"
